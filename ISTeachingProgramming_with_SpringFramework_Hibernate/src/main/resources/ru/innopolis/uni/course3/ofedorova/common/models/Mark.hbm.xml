<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.innopolis.uni.course3.ofedorova.common.models.Mark" table="marks">
        <meta attribute="class-description">
            This class contains the marks detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="identity"/>
        </id>
        <many-to-one name="task" column="id_task" class="ru.innopolis.uni.course3.ofedorova.common.models.Task" lazy="false"/>
        <many-to-one name="user" column="id_user" class="ru.innopolis.uni.course3.ofedorova.common.models.User" lazy="false"/>
        <property name="mark" column="mark" type="int"/>
    </class>
</hibernate-mapping>