<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.innopolis.uni.course3.ofedorova.common.models.Lecture" table="lectures">
        <meta attribute="class-description">
            This class contains the lectures detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="identity"/>
        </id>
        <property name="subject" column="subject" type="string"/>
        <property name="hoursOfTheory" column="hours_of_theory" type="int"/>
        <property name="hoursOfPractice" column="hours_of_practice" type="int"/>
    </class>
</hibernate-mapping>